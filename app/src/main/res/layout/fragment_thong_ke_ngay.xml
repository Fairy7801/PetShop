<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.FragmentThongKeNgay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnngaydau"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/btnbogoc"
            android:text="Chọn Ngày Đầu"
            android:textColor="#fff"
            android:textSize="15sp"
            android:theme="@style/foating"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnngaycuoi"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/btnbogoc"
            android:text="Chọn Ngày Sau"
            android:textColor="#fff"
            android:textSize="15sp"
            android:theme="@style/foating"
            android:visibility="visible" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/thongkengay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>