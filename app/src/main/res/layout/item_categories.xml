<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/cardviewCategory"
    android:layout_marginBottom="5dp"
    android:layout_height="80dp"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:id="@+id/lineCategory">
        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:background="@color/white"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgCategory"
                android:scaleType="fitCenter"
                android:layout_width="140dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_height="80dp"/>
            <ProgressBar
                android:indeterminateTint="@color/colorPrimary"
                android:id="@+id/progressbarCategory"
                android:layout_width="wrap_content"
                android:theme="@style/floatingbutton"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center|end"> <!-- Đặt gravity để đẩy nội dung về góc phải bên dưới -->

            <TextView
                android:id="@+id/txtnameCategory"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Bánh Canh Cua"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>